<style>

    .botao {
        font-weight: bold;
        color: #d58c00;
        padding: 5px;
        border-width: 0px;
        background-color: #fff0c4;
        width: 40%;
        display: block;
        margin: 0px auto;
        border-radius: 10rem;
        text-decoration: none;
    }

